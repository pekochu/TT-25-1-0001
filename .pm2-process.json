{
	"name": "escomonitor-backend",
	"script": "dist/src/server.js",
	"node_args": "--insecure-http-parser",
	"watch": true,
	"max_restarts": 9999,
	"max_memory_restart": "2048M",
	"instances": 1,
	"exec_mode": "fork",
	"error_file": "./logs/errors_pm2.log",
	"out_file": "./logs/debug_pm2.log",
	"ignore_watch": [
		".git",
		"screenshot",
		"node_modules",
		"npm-debug.log"
	],
	"watch_options": {
		"followSymlinks": false
	}
}