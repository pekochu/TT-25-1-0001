doctype html
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Lynx Repeater
    meta(name='description', content='')
    meta(name='theme-color' content='#4DA5F4')   
    block styles
      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-nightfall.min.css', media='(prefers-color-scheme: dark)')

  body
    include partials/header

    .container.pl-sm-0.pr-sm-0.pl-lg-3.pr-lg-3
      include partials/flash
      block content

    include partials/footer

    block scripts
      script(src='/js/lib/jquery-3.1.1.min.js')
      script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js')
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js')
      script(src='/js/main.js')
      script(src='/js/lib/hls.min.js')
      script(src='/js/lib/playerHls.min.js')
      script(src='/js/main.js')

    
